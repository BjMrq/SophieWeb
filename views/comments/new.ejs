<% include ../partials/header %>

<section id="header" class="jumbotron pt-5 pb-4">
  <h1 class="intro display-2">Add New Comment to <%= picture.title %> </h1>
  <hr>
</section>

<div class="container">
  <div class="form">
    <form action="/collection/<%= picture._id %>/comments" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" placeholder="Comment">
      </div>
        <button class="btn btn-custom btn-block" type="submit">Submit!</button>
    </form>
  </div>
</div>

<% include ../partials/footer %>
