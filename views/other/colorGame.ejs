  </div>

  <!-- navbar -->

  <div class="navbar">
    <div class="container">
      <button id="reset" type="button" name="button">NEW COLORS</button>
      <span id="messageToPlayer"></span>
      <button id="easyBTN" type="button" name="button">EASY</button>
      <button id="hardBTN" type="button" name="button">HARD</button>
    </div>
  </div>


