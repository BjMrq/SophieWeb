<% include ../partials/header %>

<section id="header" class="jumbotron">
  <h1 class="intro display-2"> Reset your password </h1>
  <hr>
</section>

<div class="container">
  <% if(error && error.length > 0){ %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
  <% } %>
  <% if(success && success.length > 0){ %>
    <div class="alert alert-success" role="alert">
    <%= success %>
    </div>
  <% } %>
</div>

<div class="container">
  <div class="form">
    <form action="/forgot" method="POST">
      <div class="form-group">
        <label for="email">Your email</label>
        <input class="form-control" type="email" name="email" placeholder="Forgot your password? What is your email?" required>
      </div>
        <button class="btn btn-custom btn-block mt-3" type="submit">Send me a reset link</button>
    </form>
  </div>
</div>

<% include ../partials/footer %>
