<% include ../partials/header %>

<section id="header" class="jumbotron">
  <h1 class="intro display-2">  <%= user.name %> </h1>
  <hr>
</section>

<div class="container">
  <% if(error && error.length > 0){ %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
  <% } %>
  <% if(success && success.length > 0){ %>
    <div class="alert alert-success" role="alert">
    <%= success %>
    </div>
  <% } %>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-3 ">
      <img class="profilePic" src="<%= user.image%>" >
    </div>

    <div class="col-sm-4 ">
      <h1>Info:</h1>
      <p><%= user.name %> <%= user.surname %></p>

    </div>
    <div class="col-sm-5 ">
      <h1>Social:</h1>
      <p>facebook:</p>
      <%= user.facebook %>
      <p>Istagram:</p>
      <%= user.instagram %>
    </div>

  </div>


</div>

<% include ../partials/footer %>
