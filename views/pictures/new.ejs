<% include ../partials/header %>

<section id="header" class="jumbotron pt-5 pb-4">
  <h1 class="intro display-2">Add a New Picture</h1>
  <hr>
</section>

<div class="container">
  <% if(error && error.length > 0){ %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
  <% } %>
  <% if(success && success.length > 0){ %>
    <div class="alert alert-success" role="alert">
    <%= success %>
    </div>
  <% } %>
</div>

<div class="container">
  <div class="form">
    <form action="/collection" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title">Picture's Title</label>
        <input id="title" class="form-control" type="text" name="picture[title]" placeholder="title" required>
      </div>
      <div class="form-group">
          <label for="image">Picture</label>
          <br>
          <input class="btn-input" type="file" id="image" name="image" accept="image/*" required>
      </div>
      <div class="form-group">
        <label for="description">Picture's description</label>
        <input id="description" class="form-control" type="text" name="picture[description]" placeholder="description">
      </div>
        <button class="btn btn-custom btn-block" type="submit">Submit!</button>
    </form>
  </div>
</div>

<% include ../partials/footer %>
